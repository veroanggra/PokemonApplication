<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/s_avatar"
        android:layout_width="@dimen/_65dp"
        android:layout_height="@dimen/_65dp"
        android:layout_margin="@dimen/_16dp"
        android:background="@drawable/shimmer_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/s_name"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_20dp"
        android:layout_marginStart="@dimen/_8dp"
        android:background="@drawable/background_shimer"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/s_id"
        app:layout_constraintStart_toEndOf="@+id/s_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <View
        android:id="@+id/s_id"
        android:layout_width="@dimen/_65dp"
        android:layout_height="@dimen/_16dp"
        android:layout_marginStart="@dimen/_8dp"
        android:background="@drawable/background_shimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s_avatar"
        app:layout_constraintTop_toBottomOf="@+id/s_name"
        tools:text="#001" />

    <View
        android:id="@+id/s_type"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="@dimen/_20dp"
        android:background="@drawable/shimmer_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>