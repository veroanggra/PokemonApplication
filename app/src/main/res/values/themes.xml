<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokemonApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/primary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


     <style name="NoTop" parent="Theme.PokemonApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="MyToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="titleTextAppearance">@style/MyToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/MyToolbarSubtitle</item>
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyToolbarTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_3</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyToolbarSubtitle" parent="MyToolbarTitle">
        <item name="android:textColor">@color/c_3</item>
        <item name="android:textSize">12sp</item>
    </style>

<!--    <style name="MyMenuOverFlow" parent="Widget.AppCompat.ActionButton.Overflow">-->
<!--        <item name="android:tint">@android:color/black</item>-->
<!--    </style>-->

    <style name="MyTextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyEditText" parent="BaseEditText">
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <!--Button-->
    <style name="BaseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyButton" parent="BaseButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/background_button</item>
    </style>


</resources>